<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
   "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<!-- Fig. 25.14: fig25_14.psp                            -->
<!-- PSP that processes a "get" request containing data. -->

<%-- specify indent type --%>
<%@ page indentType = "spaces" %>
<%@ page indentSpaces = "3" %>
<%@ page imports = "__future__:division" %>

<%-- define a psp method --%>
<psp:method name = "calculate" 
   params = "operand1, operator, operand2" >

if operator == "+":      # addition operation
   result = operand1 + operand2 

elif operator == "-":    # subtraction operation
   result = operand1 - operand2 

elif operator == "*":    # multiplication operation
   result = operand1 * operand2

elif operator == "/":    # division operation
   result = operand1 / operand2

elif operator == "//":   # floor division
   result = operand1 // operand2

else:                    # unrecognizable operator
   result = None

return result

</psp:method> <%-- end psp method declaration --%>


<html xmlns = "http://www.w3.org/1999/xhtml">

   <!-- head section of document -->
   <head>
      <title>Calculator Result</title>
   </head>

   <!-- body section of document -->
   <body>
      <h1>Python Calculator Result</h1>

      <%-- get client input --%>
      <% 
         try:
            operand1 = float( req.field( "operand1" ) )
            operator = req.field( "operator", "+" )
            operand2 = float( req.field( "operand2" ) )
            noError = 1 $%>
      <% except Exception: 
            res.write( "You did not enter a number." )
            noError = 0 $%> 

      <%-- display expression --%>
      <% if noError: %>
         <br />
         <%= operand1 %> <%= operator %> <%= operand2 %> = 
         <%= self.calculate( operand1, operator, operand2 ) %>
      <% end %>
   </body>

</html>  <!-- end XHTML document -->

