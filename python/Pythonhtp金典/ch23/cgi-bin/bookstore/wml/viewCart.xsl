<?xml version = "1.0"?>

<!-- Fig. 23.32: viewCart.xsl                          -->
<!-- XSLT style sheet that transforms XML generated by -->
<!-- viewCart.py into WML.                             -->

<xsl:stylesheet version = "1.0"
   xmlns:xsl = "http://www.w3.org/1999/XSL/Transform">

   <xsl:output method = "xml" omit-xml-declaration = "no" 
      indent = "yes" doctype-system = 
      "http://www.wapforum.org/DTD/wml12.dtd"
      doctype-public = "-//WAPFORUM//DTD WML 1.2//EN"/>

<xsl:template match = "cart">

   <wml>

      <head>
         <meta forua = "true" http-equiv = "Cache-Control" 
            content = "max-age=0" />
      </head>

      <card title = "Shopping Cart">

         <p>

            <b>Shopping Cart</b><br /><br />

            <xsl:choose>
               <xsl:when test = "@total = '0.00'">
                  Your shopping cart is currently empty.<br />
                  <br />
               </xsl:when>

               <xsl:otherwise>  <!-- total != 0.00 -->
   
                  <xsl:apply-templates select = "orderProduct">  
                        
                     <!-- sort orderProducts by title -->
                     <xsl:sort select = "product/title" />
                     
                  </xsl:apply-templates>
                     
                  <b>Total: <xsl:value-of 
                     select = "@total" /></b><br />
   
               </xsl:otherwise>
            </xsl:choose>

            <a href = "allBooks.py?ID=%s">Continue Shopping</a>
            <br />
            <a href = "order.py?ID=%s">Check Out</a>
   
         </p>
      
      </card>

   </wml>
  
</xsl:template>

<xsl:template match = "orderProduct">

   Product:<br />
   <xsl:value-of select = "product/title" />,
   <xsl:value-of select = "product/editionNumber" />e<br />
   Quantity: <xsl:value-of select = "quantity" /><br />
   Price: <xsl:value-of select = "product/price" /><br />
   Subtotal: <xsl:value-of select = "subtotal" /><br />
   <br />

</xsl:template>

